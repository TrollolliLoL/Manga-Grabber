{
  "manifest_version": 3,
  "name": "MangaGrabber",
  "version": "1.0.0",
  "description": "Capture et télécharge les images d'un chapitre manga en un clic.",
  "icons": {
    "16": "asset/icon16.png",
    "32": "asset/icon32.png",
    "48": "asset/icon48.png",
    "128": "asset/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "asset/icon16.png",
      "32": "asset/icon32.png",
      "48": "asset/icon48.png",
      "128": "asset/icon128.png"
    },
    "default_title": "MangaGrabber"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ]
}